  h1.admin_detail_con_title= title 



  if (user.account==="business")
    table.user_detail_stat 
      tr.user_detail_id
        th 아이디
        td #{user.username}
      tr.user_detail_name
        th 회사명
        td #{user.name}
      tr.user_detail_platform
        th 광고방법
        td 
          each user_platform in user.platform
            span  #{user_platform.name}
      tr.user_detail_tel
        th 연락처
        td #{user.phone}
      tr.user_detail_mail
        th 이메일
        td #{user.email}
      tr.user_detail_place
        th 지역
        td #{user.city[0].name}
      tr.user_detail_company_info 
        th 회사소개
        td #{user.about}
      tr.user_detail_auth
        th 승인상태
        td 
          if(user.auth == '1')
            span 사용
          else 
            span 정지
      tr.user_detail_auth_b 
        th 회원 승인
        td 
          form(action="", method="POST", onsubmit="return confirm('y/n')") 
            select.frm_input(name="auth") 
              option(value="true", selected=(user.auth===true ? true : false)) 승인
              option(value="false", selected=(user.auth===false ? true : false)) 미승인
            button.user_detail_auth_btn(type="submit") 확인

        
  else 
    table.user_detail_stat 
      tr.user_detail_id
        th 아이디
        td #{user.username}
      tr.user_detail_name
        th 이름
        td #{user.name}
      tr.user_detail_tel
        th 연락처
        td #{user.phone}
      tr.user_detail_mail
        th 이메일
        td #{user.email}
      tr.user_detail_place
        th 지역
        td #{user.city[0].name}
      tr.user_detail_birth 
        th 생년월일
        td #{user.date_of_birth.getFullYear()}.#{user.date_of_birth.getMonth() +1}.#{user.date_of_birth.getDate()}
      tr.user_detail_auth
        th 승인상태
        td 
          if(user.auth == '1')
            span 사용
          else 
            span 정지
      tr.user_detail_auth_b 
        th 회원 승인
