      each review in user.reviews
        li 
          p 남긴말 : #{review.content}
          p 별점 : ★ #{review.rating}
          p 날짜 : #{review.reg_date.getFullYear()}.#{review.reg_date.getMonth() +1}.#{review.reg_date.getDate()}. #{review.reg_date.getHours()}:#{review.reg_date.getMinutes()}
