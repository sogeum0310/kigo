extends layout 

block content 
  h1.admin_con_title= title
  
  //- pre= users
        
  //- Ordering user number
  -var num = (users.page-1) * users.limit + 1

  //- Personal users
  if (title == '일반사용자')
    table.user_list_stat
      tbody
        tr
          th.user_list_num
            | 연번
          th.user_list_id
            | 아이디
          th.user_list_name
            | 이름
          th.user_list_gender
            | 성별
          th.user_list_birth 
            | 생년월일
          th.user_list_place 
            | 지역
          th.user_list_tel 
            | 연락처
          th.user_list_mail 
            | 이메일
          th.user_list_state 
            | 상태
          th.user_list_mana 
            | 탈퇴여부
          th.user_list_tool
            | 관리

        each user in users.docs
          tr 
            td.user_list_num #{num++}
            td.user_list_id #{user.username}
            td.user_list_name #{user.name}
            td.user_list_gender 
              if (user.gender == 'male')
                span 남
              else 
                span 여
            td.user_list_birth #{user.date_of_birth}
            td.user_list_place 
              if (user.city)
                span #{user.city[0].name}
            td.user_list_tel #{user.phone}
            td.user_list_mail #{user.email}
            td.user_list_state 
              span=(user.authorization===true ? '사용' : '정지')
            td.user_list_mana 
              span=(user.drop===true ? 'O' : 'X')
            td.user_list_tool
              a(href="/admin/user/detail/" + user._id) 상세보기

  //- Business users
  if (title == '광고업체')
    table.user_list_stat
      tbody
        tr
          th.user_list_num
            | 연번
          th.user_list_id
            | 아이디
          th.user_list_name
            | 회사명
          th.user_list_mail 
            | 이메일
          th.user_list_joindate
            | 승인요청
          th.user_list_startdate 
            | 서비스 시작
          th.user_list_review_count
            | 이용 후기
          th.user_list_contract_count
            | 계약서 관리
          th.user_list_ranking 
            | 회원 등급
          th.user_list_state 
            | 상태
          th.user_list_mana 
            | 탈퇴여부
          th.user_list_tool 
            | 관리

        each user in users.docs
          tr 
            td.user_list_num #{num++}
            td.user_list_id #{user.username}
            td.user_list_name #{user.name}
            td.user_list_mail #{user.email}
            td.user_list_joindate #{user.reg_date.toLocaleDateString()}
            td.user_list_startdate 
              if (user.start_date) 
                span #{user.start_date.toLocaleDateString()}
            td.user_list_review_count
              span= user.review
            td.user_list_contract_count #{user.contract}
            td.user_list_ranking 
              if (user.level == '1')
                span 신규
              if (user.level == '2')
                span 동메달
              if (user.level == '3')
                span 은메달
              if (user.level == '4')
                span 금메달
            td.user_list_state 
                span=(user.authorization===true ? '사용' : '정지')
            td.user_list_mana 
              span=(user.drop===true ? 'O' : 'X')
            td.user_list_tool 
              a(href="/admin/user/detail/" + user._id) 상세보기
  
  br

  //- Pagination
  div 
    -var p = 1
    while (p < users.totalPages + 1) 
      if (users.docs[0].account==='personal')
        a(href="/admin/user/personal/list?page=" + p) #{p++} / 
      else
        a(href="/admin/user/business/list?page=" + p) #{p++} / 
        
          