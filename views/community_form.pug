extends layout 

block content 
  link(rel="stylesheet", href="/summernote/summernote-lite.css")
  script(src="/summernote/summernote-lite.js") 
  h1= title

  form(action="", method="POST")
    input(type="text", name="title", value=(undefined===blog ? '' : blog.title))
    br
    textarea#summernote(name="content", cols="30", rows="10")=(undefined===blog ? '' : blog.content) 
    p 
      button(type="submit") confirm


  script(src="/summernote/summernote.js") 