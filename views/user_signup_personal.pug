extends layout 
block header 
  include back_header.pug
block content 
  style.
    .foot_icon_wrap{
    display: none;
    }
  .container
    ul#errors.signup_error 
    
    form(action=(undefined===user_personal ? '' : '/mypage/personal/account') method="POST", onsubmit="return confirm('제출하시겠습니까?');") 
      div.form-group(style="display:none")
        label(for="") update
        input(type="checkbox", name="update", checked=(undefined===user_personal ? false : true))
      table.signup_form 
        tbody 
          tr 
            td 
              label(for="") 아이디
            td 
              input.full_input(type="text", name="username" value=(undefined==user_personal ? '' : user_personal.username), readonly=(undefined===user_personal ? false : true ), required)
              p.signup_txt 아이디는 영어 소문자와 숫자만 사용 가능합니다. 길이는 최소 6자 이상이어야 합니다.
          
          //- Displayed only when sign up
          if (undefined===user_personal)
            tr
              td 
                label(for="") 비밀번호
              td 
                input.full_input(type="password" name="password", required) 
            tr 
              td 
                label(for="") 비밀번호 확인
              td 
                input.full_input(type="password" name="password_confirm", required) 
                p.signup_txt 비밀번호는 최소 1개 이상의 영어 대문자 및 소문자, 숫자가 있어야합니다. 길이는 최소 8자 이상이어야 합니다.
          //- To pass the password validation, give form fake password 
          else 
            input(type="hidden", name="password", value="aaaaaaA1")
            input(type="hidden", name="password_confirm", value="aaaaaaA1")
        
          tr
            td 
              label(for="") 이름 
            td 
              input.full_input(type="text" name="name" value=(undefined==user_personal ? '' : user_personal.name), required) 
          tr 
            td 
              label(for="") 성별
            td 
              label(for="") 남
              input.check_gender(type="radio" name="gender" value="male" checked=(undefined==user_personal || user_personal.gender!='male' ? false:'checked'))
              label(for="") 여
              input.check_gender(type="radio" name="gender" value="female" checked=(undefined==user_personal || user_personal.gender!='female' ? false:'checked')) 
          tr 
            td 
              label(for="") 생년월일
            td 
              input.full_input(type="date" name="birth_date" value=(undefined==user_personal ? '' : user_personal.date_of_birth_yyyy_mm_dd), required) 
          tr 
            td 
              label(for="") 지역
            td 
              select.full_input(name="city", required) 
                each city in cities 
                  option(value=city._id, selected=(undefined!=user_personal && user_personal.city==city._id.toString() ? 'selected' : false))= city.name 
          tr 
            td 
              label(for="") 휴대폰
            td 
              input.full_input(type="number" name="phone" value=(undefined==user_personal ? '' : user_personal.phone), required)
          tr 
            td 
              label(for="") 이메일
            td 
              input.full_input(type="text" name="email" value=(undefined==user_personal ? '': user_personal.email), required)
          //- tr 
          //-   td(colspan='2')
          //-     textarea#policy.full_input(name="", cols="30", rows="10") 
      .terms 
        p 이용약관
      button.signup_btn(type="submit") 확인

  script.
    var url = '/validity'
  script(src="/scripts/form.js") 
